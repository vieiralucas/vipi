{
  "compilerOptions": {  
    "incremental": true,
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "downlevelIteration": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
